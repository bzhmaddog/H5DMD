
{
  "compilerOptions": {
    "outDir": "./dist/js/",
    "baseUrl": "src",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "es2022",
    "target": "es2022",
    "allowJs": false,
    "typeRoots": [
      "./node_modules/@webgpu/types",
      "./node_modules/@types"
