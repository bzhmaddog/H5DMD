{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@utils/*": [
        "utils/*"
      ],
      "@layers/*": [
        "layers/*"
      ],
      "@interfaces/*": [
        "interfaces/*"
      ],
      "@renderers/*": [
        "renderers/*"
      ],
      "@enums/*": [
        "enums/*"
      ]
    },
    "importHelpers": true,
    "declaration": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "es2022",
    "target": "es2022",
    "allowJs": false,
    "typeRoots": [
      "./node_modules/@webgpu/types",
      "./node_modules/@types"
    ],
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
